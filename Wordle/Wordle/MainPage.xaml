<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle.MainPage"
             BackgroundColor="Pink">

        <VerticalStackLayout
            Spacing="50">

            <Label
                Text="Word Game!"
                TextColor="Purple"
                FontSize="75"
                FontAttributes="Bold"
                FontFamily="Arial"
                HorizontalOptions="Center"
            />

  <HorizontalStackLayout
      HorizontalOptions="Center">
        <VerticalStackLayout
            x:Name="Board"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            BackgroundColor="Pink">
            
            


        </VerticalStackLayout>
        <VerticalStackLayout
            HorizontalOptions="End"
            VerticalOptions="Center">
            
            <Entry
                x:Name="typeBox"
                BackgroundColor="White"
                TextColor="Black"
                TextChanged="typeBox_TextChanged"
                Completed="typeBox_Completed"
                />

        </VerticalStackLayout>
      </HorizontalStackLayout>
 </VerticalStackLayout>
</ContentPage>

